<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.todomvc" version="1.1.4" xmlns="http://www.w3.org/ns/widgets">
    <hook src="hooks/build.sh" type="before_prepare" />
    <name>Hybrid Bridge demonstration</name>
    <description>
        A sample Apache Cordova application.
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <feature name="HybridBridge">
        <param name="android-package" onload="true" value="com.mobgen.pochybridandroid.HybridBridge" />
        <param name="onload" value="true" />
    </feature>
</widget>